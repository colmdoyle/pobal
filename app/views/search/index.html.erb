<div class="container">
  <% if @search_results.empty? %>
    <div class="well">
      <div class="row">
        <div class="col-md-12">
          <h1>No results found</h1>
          <p class="lead">Your search - <em><%= params['form-input'] %></em> - returned no results.</p>
          <p>This is usually because there were too many similar addresses, like <em>"Blackrock, Co.Dublin"</em> and <em>"Blackrock, Cork"</em>. You can try providing a more detailed address <%= link_to "here", root_path %>.</p>
        </div>
      </div>
    </div>
  <% else %>
  <% @search_results.each { |_, details| %>
    <div class="well">
      <div class="row">
        <div class="col-md-4">
          <h2>Your <%= details["constituency_type"].member_title_abbreviation.pluralize(details["representatives"].count) %> for <%= link_to details["constituency"].name, details["constituency"] %></h2>
          <p>
            <%= details["constituency_type"].short_description %>
          </p>
        </div>
        <div class="col-md-8">
          <ul class="list-unstyled">
            <% for rep in details["representatives"] %>
              <li>
                  <span class="lead"><%= link_to rep.person.name, rep.person %> <span class="text-muted"><%= rep.person.current_party ?  "(#{rep.person.current_party.name})" : "" %></span></span>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% } %>
  <% end %>
</div>
