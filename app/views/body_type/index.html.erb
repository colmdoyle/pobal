<div class="container">
  <h2>Bodies</h2>
  <% for body_type in @body_types %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><%= body_type.name %></h3>
    </div>
    <div class="panel-body">
      <ul class="list-unstyled">
        <% for body in body_type.bodies %>
        <li>
          <%= link_to body.name, body %>
        </li>
        <% end %>
      </ul>
    </div>
  </div>
  <% end %>
</div>
