<div class="homepage">
  <div class="container">
    <div class="row billboard">
      <div class="col-md-8 col-md-offset-2">
        <h1>
          We're the IMDb of Irish Politics. That's awesome.
        </h1>
        <p class="lead">
          Listing who's who in Irish politics since 2013.
        </p>
      </div>
    </div>
  </div>
</div>
<div class="container search-area">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <p class="text-center lead">
        To get started, just enter your address.
      </p>
      <%= form_tag search_index_path, {role: 'form', method: 'GET'} do %>
      <div class="input-group" id="form-search-group">
        <%= text_field_tag 'form-input', nil, placeholder: 'e.g. Kildare Street, Dublin 2, Ireland', class: 'form-control', autocomplete: 'off' %>
        <span class="input-group-btn">
          <button class="btn btn-primary btn-search" id="form-submit" type="submit">Search</button>
        </span>
  		</div>
      <% end %>
    </div>
  </div>
</div>
<script type="text/javascript" src="http://maps.googleapis.com/maps/api/js?libraries=places&amp;sensor=false"></script>
