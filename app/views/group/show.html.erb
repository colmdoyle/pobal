<div class="container">
  <div class="row">
    <div class="col-md-2">
      <% if @group.avatar.file? %>
        <img alt="<%= @group.name %>" class="img-responsive img-rounded center-block" src="<%= @group.avatar.url(:small) %>">
      <% end %>
    </div>
    <div class="col-md-10">
      <div class="row">
        <div class="col-md-12">
          <h1><%= @group.name %></h1>
          <p class="lead">
            <%= @group.group_type.name %>
          </p>
      </div>
      </div>
    </div>
  </div>
  <% if @group.has_contact_details? %>
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-10">
      <%= render partial: "shared/contact_details_box", locals: {subject: @group} %>
    </div>
  </div>
  <% end %>
  <% if @group.description && @group.description.length > 0 %>
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-10">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">About</h3>
        </div>
        <div class="panel-body">
          <p>
            <%= @group.description %>
          </p>
        </div>
      </div>
    </div>
  </div>
  <% end %>
  <% if @group.current_members.length > 0 %>
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-10">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Current Members</h3>
        </div>
        <div class="panel-body">
          <div class="table-responsive">
            <table class="table">
              <thead>
                <th>Name</th>
                <th>Position</th>
                <th>From</th>
                <th>To</th>
              </thead>
              <tbody>
                <% for member in @group.current_members %>
                <tr>
                  <td><%= link_to member.person.name, member.person %></td>
                  <td><%= member.person.current_position ? member.person.current_position.position_type.title : "" %></td>
                  <td><%= member.start_date ? member.start_date : "Unknown" %></td>
                  <td><%= member.end_date ? member.end_date : "Current" %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% end %>
  <% if @group.former_members.length > 0 %>
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-10">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Former Members</h3>
        </div>
        <div class="panel-body">
          <div class="table-responsive">
            <table class="table">
              <thead>
                <th>Name</th>
                <th>Position</th>
                <th>From</th>
                <th>To</th>
              </thead>
              <tbody>
                <% for member in @group.former_members %>
                <tr>
                  <td><%= link_to member.person.name, member.person %></td>
                  <td><%= member.person.current_position.position_type.title %></td>
                  <td><%= member.start_date ? member.start_date : "Unknown" %></td>
                  <td><%= member.end_date ? member.end_date : "Current" %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
